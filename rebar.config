{erl_opts, [
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_export,
  warn_unused_function,
  warn_unused_record,
  warn_deprecated_function,
  warn_deprecated_type,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  debug_info
]}.
{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
{clean_files, ["test/*.beam", "deps/*/ebin/*.beam"]}.
{ct_dir, ["./test"]}.
{ct_log_dir, ["./test/logs"]}.
{deps, [
  {enacl, ".*", {git, "https://github.com/jlouis/enacl.git", {branch, master}}},
  {ranch, ".*", {git, "https://github.com/ninenines/ranch.git", {branch, master}}},
  {proper, ".*", {git, "https://github.com/manopapad/proper.git", {branch, master}}}
]}.
