{erl_opts, [
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_export,
  warn_unused_function,
  warn_unused_record,
  warn_deprecated_function,
  warn_deprecated_type,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  debug_info
]}.
{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
{clean_files, ["test/*.beam", "deps/*/ebin/*.beam"]}.
{edoc_opts, [{doclet, edown_doclet},
  {app_default, "http://www.erlang.org/doc/man"},
  {top_level_readme, {"./README.md", "http://github.geo.apple.com/wiggles/job_tracker"}},
  {report_missing_types, true},
  {source_path, ["src"]},
  {includes, ["include"]},
  {todo, true},
  {packages, false},
  {subpackages, false}
]}.
{deps, [
  {enacl, ".*", {git, "https://github.com/jlouis/enacl.git", {branch, master}}},
  {druuid, ".*", {git, "https://github.com/kellymclaughlin/druuid.git", {branch, master}}},
  {edown, ".*", {git, "git://github.com/esl/edown.git", "HEAD"}}
]}.
